{
  "name": "Coinbase Auto Trader",
  "description": "Simple chrome extension to convert currencies using the UI",
  "version": "1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["https://www.coinbase.com/accounts"],
      "js": ["dist/coinbase-auto-trader.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/icon_v16.png",
      "32": "/images/icon_v32.png",
      "48": "/images/icon_v48.png",
      "128": "/images/icon128.png",
      "256": "/images/icon256.png",
      "512": "/images/icon512.png"
    }
  },
  "icons": {
    "16": "/images/icon_v16.png",
    "32": "/images/icon_v32.png",
    "48": "/images/icon_v48.png",
    "128": "/images/icon128.png",
    "256": "/images/icon256.png",
    "512": "/images/icon512.png"
  }
}